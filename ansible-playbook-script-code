---
- name: installing java
  hosts: Slave1
  become: true
  tasks:
    - name: installing java on slave1
      apt: name=openjdk-18-jdk update-cahce=yes state=latest
- name: installing sql
  hosts: Slave2
  become: true
  tasks:
    - name: installing sql on slave2
      apt: name=mysql-server update-cache=yes state latest
